<%- include('../partials/header') %>
<table id="list">
  <thead>
    <tr>
      <th>Team Name</th>
      <th>Formation</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% teams.forEach(function(t) { %>
    <tr>
      <td><%= t.teamName %></td>
      <td><%= t.formation %></td>
      <td><a href="/teams/<%= t._id %>">DETAILS</a></td>
      <td><a href="/teams/<%= t._id %>/edit">EDIT</a></td>
      <td>
        <form
          action="/teams/<%= t._id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit" class="allBtns">DELETE</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<%- include('../partials/footer') %>
